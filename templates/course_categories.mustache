<div id="accordion">
    {{# course_categories }}
    <div class="card">
        <div class="card-header" id="heading-{{ idnumber }}">
            <div class="row">
                <div class="col-8">
                    <h5 class="mb-0">
                        <button class="btn btn-link category-button" id="id-{{ id }}" data-toggle="collapse" data-target="#card-body-{{ idnumber }}" aria-expanded="false"
                            aria-controls="collapseOne">
                            {{name}}
                        </button>
                    </h5>
                </div>
                <div class="col-4">
                    Total de cursos: {{ coursecount }}
                </div>
            </div>
        </div>

        <div id="card-body-{{ idnumber }}" class="collapse" aria-labelledby="heading-{{ idnumber }}" data-parent="#accordion">
            <div class="card-body">
                                
            </div>
        </div>
    </div>
    {{/ course_categories }}
</div>